@page
@model AddJokeModel
@{
    ViewData["Title"] = "Add a Joke";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Add a New Joke</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Setup" class="form-label"></label>
                            <textarea asp-for="Input.Setup" class="form-control" rows="3" placeholder="Enter your joke setup here..."></textarea>
                            <span asp-validation-for="Input.Setup" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Punchline" class="form-label"></label>
                            <textarea asp-for="Input.Punchline" class="form-control" rows="3" placeholder="Enter your joke punchline here..."></textarea>
                            <span asp-validation-for="Input.Punchline" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Category" class="form-label"></label>
                            <input asp-for="Input.Category" class="form-control" placeholder="Enter category (e.g., Programming, Animals, etc.)" />
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.IsPrivate" class="form-check-input" />
                            <label asp-for="Input.IsPrivate" class="form-check-label">Make this joke private (visible only to you)</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Add Joke</button>
                            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
